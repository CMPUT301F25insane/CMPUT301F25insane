<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/fragment_main">

    <fragment
        android:id="@+id/fragment_main"
        android:name="com.example.camaraderie.MainFragment"
        android:label="Main Fragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_fragment_main_to_fragment_create_event_testing"
            app:destination="@id/fragment_create_event_testing" />
        <action
            android:id="@+id/action_fragment_main_to_created_event"
            app:destination="@id/created_event"/>
        <action
            android:id="@+id/action_fragment_main_to_update_user_event"
            app:destination="@id/update_user"/>

        <argument
            android:name="hostPath"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/fragment_create_event_testing"
        android:name="com.example.camaraderie.CreateEventFragment"
        android:label="Create Event Fragment"
        tools:layout="@layout/fragment_create_event_testing">
        <action
            android:id="@+id/action_fragment_create_event_testing_to_fragment_main"
            app:destination="@id/fragment_main" />
    </fragment>

    <fragment
        android:id="@+id/created_event"
        android:name="com.example.camaraderie.CreatedEventFragment"
        android:label="Created Event Fragment"
        tools:layout="@layout/created_event">
        <action
            android:id="@+id/action_created_event_to_fragment_main"
            app:destination="@id/fragment_main" />
    </fragment>

    <fragment
        android:id="@+id/update_user"
        android:name="com.example.camaraderie.UpdateUserFragment"
        android:label="Update User Profile Fragment"
        tools:layout="@layout/activity_update_user">
        <action
            android:id="@+id/action_created_event_to_fragment_main"
            app:destination="@id/fragment_main" />
    </fragment>




</navigation>
