<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_resource"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="386dp"
        android:layout_height="760dp"
        android:background="@drawable/gradient_for_org_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72">

        <EditText
            android:id="@+id/name_field_for_update_user"
            android:layout_width="343dp"
            android:layout_height="44dp"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            android:textColor="#9C9C9C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.075" />

        <EditText
            android:id="@+id/address_field_for_update_user2"
            android:layout_width="343dp"
            android:layout_height="44dp"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:inputType="text"
            android:text="@string/address"
            android:textColor="#9C9C9C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.271" />

        <EditText
            android:id="@+id/email_field_for_update_user"
            android:layout_width="343dp"
            android:layout_height="44dp"
            android:ems="10"
            android:inputType="text"
            android:text="Email"
            android:textColor="#9C9C9C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.166" />

        <EditText
            android:id="@+id/phone_field_for_update_user3"
            android:layout_width="343dp"
            android:layout_height="44dp"
            android:layout_marginBottom="416dp"
            android:ems="10"
            android:inputType="text"
            android:text="Phone Number"
            android:textColor="#9C9C9C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.846" />

        <HorizontalScrollView
            android:layout_width="363dp"
            android:layout_height="92dp"
            android:fadeScrollbars="false"
            android:overScrollMode="never"
            android:padding="8dp"
            android:scrollbars="horizontal|none"
            app:layout_constraintBottom_toTopOf="@+id/geoSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_field_for_update_user3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/confirm_button_for_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B06CF9CC"
                    android:fontFamily="@font/cambria"
                    android:text="Confirm"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.88"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.512"
                    app:strokeWidth="3.5dp" />

                <Button
                    android:id="@+id/cancel_button_for_user_profile"
                    android:layout_width="104dp"
                    android:layout_height="49dp"
                    android:backgroundTint="#8FE5E4FF"
                    android:fontFamily="@font/cambria"
                    android:text="Cancel"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.087"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.513"
                    app:strokeWidth="3.5dp" />

                <Button
                    android:id="@+id/guidelines_button_for_user_profile3"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#8FE5E4FF"
                    android:fontFamily="@font/cambria"
                    android:text="Guidelines"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.869"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.651"
                    app:strokeWidth="3.5dp" />

                <Button
                    android:id="@+id/Delete_button_for_user_profile"
                    android:layout_width="149dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#B0F96C6E"
                    android:fontFamily="@font/cambria"
                    android:text="Delete Profile"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:strokeWidth="3.5dp" />

                <Button
                    android:id="@+id/refreshNotificationsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#8FE5E4FF"
                    android:fontFamily="@font/cambria"
                    android:text="Refresh Notifications"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:strokeWidth="3.5dp" />
            </LinearLayout>

        </HorizontalScrollView>

        <Button
            android:id="@+id/admin_button_for_user_profile2"
            android:layout_width="104dp"
            android:layout_height="49dp"
            android:backgroundTint="#8FE5E4FF"
            android:fontFamily="@font/cambria"
            android:text="Admin"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.918"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.828"
            app:strokeWidth="3.5dp" />

        <EditText
            android:id="@+id/admin_password_for_user_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:ems="10"
            android:fontFamily="@font/cambria"
            android:hint="Admin Passcode"
            android:inputType="numberPassword"
            android:textColor="#9C9C9C"
            android:textColorHint="#9C9C9C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.839" />

        <Switch
            android:id="@+id/geoSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cambria"
            android:text="Enable Geolocation"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.68" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/camaraderie_header_for_update_user"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:fontFamily="@font/cambria_italic"
        android:text="Camaraderie"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592" />
</androidx.constraintlayout.widget.ConstraintLayout>