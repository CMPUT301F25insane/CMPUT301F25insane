<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_resource"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="377dp"
        android:layout_height="698dp"
        android:background="@drawable/gradient_for_org_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715">

        <EditText
            android:id="@+id/name_field_for_update_user"
            android:layout_width="343dp"
            android:layout_height="44dp"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            android:textColor="#9C9C9C"
            app:layout_constraintBottom_toTopOf="@+id/email_field_for_update_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.695"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.669" />

        <EditText
            android:id="@+id/address_field_for_update_user2"
            android:layout_width="343dp"
            android:layout_height="44dp"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:inputType="text"
            android:text="@string/address"
            android:textColor="#9C9C9C"
            app:layout_constraintBottom_toTopOf="@+id/phone_field_for_update_user3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.695"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/email_field_for_update_user"
            android:layout_width="343dp"
            android:layout_height="44dp"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:inputType="text"
            android:text="Email"
            android:textColor="#9C9C9C"
            app:layout_constraintBottom_toTopOf="@+id/address_field_for_update_user2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.695"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/phone_field_for_update_user3"
            android:layout_width="343dp"
            android:layout_height="44dp"
            android:layout_marginBottom="320dp"
            android:ems="10"
            android:inputType="text"
            android:text="Phone Number"
            android:textColor="#9C9C9C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/confirm_button_for_user_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#B06CF9CC"
            android:fontFamily="@font/cambria"
            android:text="Confirm"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.744"
            app:layout_constraintStart_toEndOf="@+id/cancel_button_for_user_profile"
            app:layout_constraintTop_toBottomOf="@+id/phone_field_for_update_user3"
            app:strokeWidth="3.5dp" />

        <Button
            android:id="@+id/cancel_button_for_user_profile"
            android:layout_width="104dp"
            android:layout_height="49dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#8FE5E4FF"
            android:fontFamily="@font/cambria"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_field_for_update_user3"
            app:strokeWidth="3.5dp" />

        <Button
            android:id="@+id/guidelines_button_for_user_profile3"
            android:layout_width="129dp"
            android:layout_height="69dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#8FE5E4FF"
            android:fontFamily="@font/cambria"
            android:text="See Guidelines"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/admin_button_for_user_profile2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toEndOf="@+id/Delete_button_for_user_profile"
            app:layout_constraintTop_toBottomOf="@+id/confirm_button_for_user_profile"
            app:layout_constraintVertical_bias="0.0"
            app:strokeWidth="3.5dp" />

        <Button
            android:id="@+id/admin_button_for_user_profile2"
            android:layout_width="104dp"
            android:layout_height="49dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="48dp"
            android:backgroundTint="#8FE5E4FF"
            android:fontFamily="@font/cambria"
            android:text="Admin"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirm_button_for_user_profile"
            app:layout_constraintVertical_bias="0.952"
            app:strokeWidth="3.5dp" />

        <Button
            android:id="@+id/Delete_button_for_user_profile"
            android:layout_width="122dp"
            android:layout_height="61dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#B0F96C6E"
            android:fontFamily="@font/cambria"
            android:text="Delete Profile"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cancel_button_for_user_profile"
            app:strokeWidth="3.5dp" />

        <EditText
            android:id="@+id/admin_password_for_user_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="40dp"
            android:ems="10"
            android:fontFamily="@font/cambria"
            android:hint="Admin Passcode"
            android:inputType="numberPassword"
            android:textColor="#9C9C9C"
            android:textColorHint="#9C9C9C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/admin_button_for_user_profile2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Delete_button_for_user_profile"
            app:layout_constraintVertical_bias="0.807" />

        <Button
            android:id="@+id/refreshNotificationsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh Notifications"
            app:layout_constraintBottom_toTopOf="@+id/admin_password_for_user_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Delete_button_for_user_profile" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/camaraderie_header_for_update_user"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:fontFamily="@font/cambria_italic"
        android:text="Camaraderie"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592" />
</androidx.constraintlayout.widget.ConstraintLayout>