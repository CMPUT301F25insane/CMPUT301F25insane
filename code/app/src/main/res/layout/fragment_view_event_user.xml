<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_resource"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_for_disc_location_etc"
        android:layout_width="381dp"
        android:layout_height="459dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/gradient_for_org_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_view_profile_image">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_of_event_name_and_host_image"
            android:layout_width="333dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/corner_fix_event_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/event_name_for_user_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cambria"
                android:text="Event Name"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userEventViewEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/cambria"
                android:text="Date and Time"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_name_for_user_view" />

            <TextView
                android:id="@+id/registration_deadline_text_user_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/cambria"
                android:text="Registration Deadline"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userEventViewEventDate" />

            <TextView
                android:id="@+id/host_name_user_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/cambria"
                android:text="host Name"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="100dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/registration_deadline_text_user_view"
                app:layout_constraintTop_toBottomOf="@+id/host_profile_image_user_view"
                app:layout_constraintVertical_bias="0.285" />

            <ImageView
                android:id="@+id/host_profile_image_user_view"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="TODO"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/baseline_person_24"
                android:src="@drawable/baseline_person_24"
                />

            <TextView
                android:id="@+id/attendeeCountOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#F6EAEA"
                android:textColorLink="#DEDEDE"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registration_deadline_text_user_view" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cambria"
                android:text="Date:"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/userEventViewEventDate"
                app:layout_constraintEnd_toStartOf="@+id/userEventViewEventDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/userEventViewEventDate" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/cambria"
                android:text="Deadline:"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/registration_deadline_text_user_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/registration_deadline_text_user_view"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/event_description_user_view"
            android:layout_width="357dp"
            android:layout_height="196dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/cambria"
            android:gravity="center"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur malesuada, tortor non tempus porttitor, augue elit euismod leo, ut dapibus erat erat quis sapien. Praesent dignissim risus et urna facilisis, sed varius tortor commodo. Phasellus rutrum, justo eget condimentum cursus, libero elit placerat elit, ac efficitur lectus lectus eget mi. Vivamus eget ligula euismod, facilisis dolor ut, tempor arcu. Donec libero augue, tristique varius sapien id, ultrices interdum augue."
            android:textColor="@color/white"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_of_event_name_and_host_image" />

        <Button
            android:id="@+id/qr_button_user_view"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#B0394241"
            android:fontFamily="@font/cambria"
            android:textColor="@color/white"
            android:text="View QR Code"
            android:textSize="11dp"
            app:layout_constraintEnd_toStartOf="@+id/view_lists_button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_description_user_view"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/view_lists_button"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#B0394241"
            android:fontFamily="@font/cambria"
            android:textColor="@color/white"
            android:text="View Attendees"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view_photos_user_view"
            app:layout_constraintHorizontal_bias="0.992"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_description_user_view"
            app:layout_constraintVertical_bias="0.0"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/view_photos_user_view"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:backgroundTint="#B0394241"
            android:fontFamily="@font/cambria"
            android:textColor="@color/white"

            android:text="View Photos"
            android:textSize="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_description_user_view"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/location_of_user_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cambria"
            android:text="Location"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/event_description_user_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_of_event_name_and_host_image"
            app:layout_constraintVertical_bias="0.517" />

        <!--
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView_for_user_view"
            android:layout_width="322dp"
            android:layout_height="82dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qr_button_user_view" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/header_for_view_event_user"
        android:layout_width="151dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/cambria_italic"
        android:text="Camaraderie"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_of_useranizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/cambria"
        android:maxWidth="160dp"
        android:maxLines="1"
        android:text="[Name]"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/user_view_profile_image"
        app:layout_constraintEnd_toStartOf="@+id/user_view_profile_image"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toEndOf="@+id/header_for_view_event_user"
        app:layout_constraintTop_toTopOf="@+id/user_view_profile_image" />

    <ImageButton
        android:id="@+id/user_view_profile_image"
        android:layout_width="50dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/baseline_person_24"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_person_24"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:paddingHorizontal="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/hostEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@color/black"
            android:src="@drawable/hostevent" />

        <ImageButton
            android:id="@+id/dashboardButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/dashboard_image" />

        <ImageButton
            android:id="@+id/myEvents"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:src="@drawable/seeevents" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="363dp"
        android:layout_height="92dp"
        android:fadeScrollbars="false"
        android:overScrollMode="never"
        android:padding="8dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_for_disc_location_etc">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/join_button_user_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#B06CF9CC"
                android:fontFamily="@font/cambria"
                android:text="Join"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512"
                app:strokeWidth="3.5dp" />

            <Button
                android:id="@+id/unjoin_button_user_view"
                android:layout_width="104dp"
                android:layout_height="49dp"
                android:backgroundTint="#9E2C0A"
                android:fontFamily="@font/cambria"
                android:text="Unjoin"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.087"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.513"
                app:strokeWidth="3.5dp" />

            <Button
                android:id="@+id/userViewEventBackButton"
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:backgroundTint="#8FE5E4FF"
                android:fontFamily="@font/cambria"
                android:text="Back"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                app:strokeWidth="3.5dp" />

            <Button
                android:id="@+id/adminViewLogs"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#8FE5E4FF"
                android:fontFamily="@font/cambria"
                android:text="View Logs"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.869"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.651"
                app:strokeWidth="3.5dp" />

            <Button
                android:id="@+id/adminDeleteEvent"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#8FE5E4FF"
                android:fontFamily="@font/cambria"
                android:text="Delete"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.869"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.651"
                app:strokeWidth="3.5dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/deadlinePassedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline has passed!"
        android:textColor="@color/white"
        android:fontFamily="@font/cambria"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />
</androidx.constraintlayout.widget.ConstraintLayout>