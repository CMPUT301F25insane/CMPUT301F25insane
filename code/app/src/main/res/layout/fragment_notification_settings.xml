<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_resource"
    >

    <TextView
        android:id="@+id/notificationstextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cambria"
        android:gravity="center"
        android:text="If you wish to no longer receive notifications from admins, turn off &quot;Admin notifications.&quot; To no longer receive notifications from event organizers, turn off &quot;User list notifications.&quot;"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:padding="8dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toTopOf="@+id/settings_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_for_notifications" />

    <Button
        android:id="@+id/return_button_for_notifications"
        android:layout_width="117dp"
        android:layout_height="49dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#AAD6F2"
        android:fontFamily="@font/cambria"

        android:text="Return"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/settings_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_button"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#040404"
        app:strokeWidth="3.5dp" />

    <TextView
        android:id="@+id/header_for_notifications"
        android:layout_width="236dp"
        android:layout_height="89dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/cambria"
        android:gravity="center"
        android:padding="5dp"
        android:text="Notification Settings"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/camaraderie_header_for_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/cambria_italic"
        android:text="Camaraderie"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="192dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#AAD6F2"
        android:fontFamily="@font/cambria"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/return_button_for_notifications"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeWidth="3.5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>