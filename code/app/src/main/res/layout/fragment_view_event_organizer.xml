<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_resource"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_for_desc_locaton_etc"
        android:layout_width="388dp"
        android:layout_height="522dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_for_org_view"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/org_view_profile_image"
        app:layout_constraintVertical_bias="0.144">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_of_event_name_and_host_image"
            android:layout_width="333dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/corner_fix_event_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="10dp">

            <TextView
                android:id="@+id/event_name_for_org_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cambria"
                android:text="Event Name"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/orgEventViewEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cambria"
                android:text="Date and Time"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_name_for_org_view" />

            <TextView
                android:id="@+id/registration_deadline_text_org_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/cambria"
                android:text="Registration Deadline"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orgEventViewEventDate" />

            <TextView
                android:id="@+id/host_name_org_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/cambria"
                android:text="host Name"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/host_profile_image_org_view"
                app:layout_constraintVertical_bias="0.311" />

            <ImageView
                android:id="@+id/host_profile_image_org_view"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/attendeeCountOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#F6EAEA"
                android:textColorLink="#DEDEDE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registration_deadline_text_org_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/event_description_org_view"
            android:layout_width="309dp"
            android:layout_height="110dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/cambria"
            android:gravity="center"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur malesuada, tortor non tempus porttitor, augue elit euismod leo, ut dapibus erat erat quis sapien. Praesent dignissim risus et urna facilisis, sed varius tortor commodo. Phasellus rutrum, justo eget condimentum cursus, libero elit placerat elit, ac efficitur lectus lectus eget mi. Vivamus eget ligula euismod, facilisis dolor ut, tempor arcu. Donec libero augue, tristique varius sapien id, ultrices interdum augue."
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_of_event_name_and_host_image" />

        <Button
            android:id="@+id/qr_button_org_view"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#B0394241"
            android:textColor="@color/white"

            android:fontFamily="@font/cambria"
            android:text="View QR Code"
            android:textSize="12dp"
            app:layout_constraintEnd_toStartOf="@+id/view_lists_button"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_description_org_view"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/view_lists_button"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#B0394241"
            android:fontFamily="@font/cambria"
            android:text="View Lists"
            android:textColor="@color/white"

            android:textSize="12dp"
            app:layout_constraintEnd_toStartOf="@+id/view_photos_org_view"
            app:layout_constraintHorizontal_bias="0.923"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_description_org_view"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/view_photos_org_view"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#B0394241"
            android:fontFamily="@font/cambria"
            android:textColor="@color/white"

            android:text="View Photos"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_description_org_view"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/location_of_org_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cambria"
            android:text="Location"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/event_description_org_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_of_event_name_and_host_image"
            app:layout_constraintVertical_bias="0.517" />

        <!--<com.google.android.gms.maps.MapView
            android:id="@+id/mapView_for_org_view"
            android:layout_width="322dp"
            android:layout_height="82dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_attendees_button" />-->

        <Button
            android:id="@+id/showMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#AAD6F2"
            android:fontFamily="@font/cambria"
            android:text="Show Map"
            android:textColor="@color/black"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_lists_button"
            app:layout_constraintVertical_bias="0.505"
            app:strokeWidth="3.5dp" />

        <Button
            android:id="@+id/orgNotifScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#AAD6F2"
            android:fontFamily="@font/cambria"
            android:text="Notification Screen"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/showMap"
            app:layout_constraintTop_toBottomOf="@+id/view_lists_button"
            app:strokeWidth="3.5dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/header_for_view_event_organizer"
        android:layout_width="130dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/cambria_italic"
        android:gravity="center"
        android:text="Camaraderie"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_of_organizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/cambria"
        android:text="[Name]"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/org_view_profile_image"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toEndOf="@+id/header_for_view_event_organizer"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/org_view_profile_image"
        android:layout_width="50dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:background="@color/black"
        android:paddingHorizontal="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/hostEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_weight="1.1"
            android:src="@drawable/hostevent" />

        <ImageButton
            android:id="@+id/dashboardButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_weight="1"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/dashboard_image" />

        <ImageButton
            android:id="@+id/myEvents"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_weight="1"
            android:src="@drawable/seeevents" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="363dp"
        android:layout_height="92dp"
        android:layout_marginTop="43dp"
        android:fadeScrollbars="false"
        android:overScrollMode="never"
        android:padding="8dp"
        android:scrollbars="horizontal|none"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_for_desc_locaton_etc">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/OrgEventRunLotteryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#B06CF9CC"
                android:fontFamily="@font/cambria"
                android:text="Run Lottery"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512"
                app:strokeWidth="3.5dp" />

            <Button
                android:id="@+id/event_edit_button_ord_view"
                android:layout_width="104dp"
                android:layout_height="49dp"
                android:backgroundTint="#8FE5E4FF"
                android:fontFamily="@font/cambria"
                android:text="Edit"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.087"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.513"
                app:strokeWidth="3.5dp" />

            <Button
                android:id="@+id/orgViewBackButton"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#8FE5E4FF"
                android:fontFamily="@font/cambria"
                android:text="Back"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.869"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.651"
                app:strokeWidth="3.5dp" />

            <Button
                android:id="@+id/delete_button_org_view"
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:backgroundTint="#B0F96C6E"
                android:fontFamily="@font/cambria"
                android:text="Delete"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                app:strokeWidth="3.5dp" />

            <Button
                android:id="@+id/exportCSVButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:backgroundTint="#B0394241"
                android:clickable="false"
                android:enabled="false"
                android:fontFamily="@font/cambria"
                android:textColor="@color/white"
                android:text="Export as CSV"
                android:textSize="12dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/view_photos_org_view"
                app:layout_constraintTop_toBottomOf="@+id/view_lists_button"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>